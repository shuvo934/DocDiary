<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hr_accounts.acc_ledger.AccountLedger">

    <LinearLayout
        android:id="@+id/account_ledger_full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@color/light_green">

        <RelativeLayout
            android:id="@+id/app_bar_account_ledger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_green"
            android:padding="@dimen/_12sdp">

            <ImageView
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_19sdp"
                android:id="@+id/back_logo_of_account_ledger"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:src="@drawable/arrow_back"
                app:tint="@color/white"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/back_logo_of_account_ledger"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/acc_ledger"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="3dp"
            android:background="@color/white"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:weightSum="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="2.5dp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_weight=".5"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_2sdp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/light_green">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:boxBackgroundColor="@color/white"
                                app:boxBackgroundMode="filled"
                                app:boxStrokeWidth="0dp"
                                android:clickable="true"
                                android:focusable="false"
                                android:hint="Begin Date"
                                app:startIconDrawable="@drawable/calendar_icon_new"
                                app:startIconTintMode="screen"
                                app:startIconTint="@android:color/transparent">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/begin_date_account_ledger"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:inputType="date"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="@dimen/_9sdp"
                                    android:imeOptions="actionDone"
                                    android:textColor="@color/black"/>

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2.5dp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_weight=".5"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_2sdp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/light_green">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:boxBackgroundColor="@color/white"
                                app:boxBackgroundMode="filled"
                                app:boxStrokeWidth="0dp"
                                android:hint="End Date"
                                android:clickable="true"
                                android:focusable="false"
                                app:startIconDrawable="@drawable/calendar_icon_new"
                                app:startIconTintMode="screen"
                                app:startIconTint="@android:color/transparent">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/end_date_account_ledger"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:inputType="date"
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="@dimen/_9sdp"
                                    android:imeOptions="actionDone"
                                    android:textColor="@color/black"/>
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:id="@+id/date_range_msg_account_ledger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date Range is Invalid"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_4sdp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/light_green">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinner_layout_account_no_acc_ledger"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            app:boxCornerRadiusTopStart="@dimen/_8sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                            app:boxBackgroundColor="@color/white"
                            app:boxBackgroundMode="filled"
                            app:endIconMode="dropdown_menu"
                            app:boxStrokeWidth="0dp"
                            android:hint="A/C No"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/account_no_acc_ledger_spinner"
                                style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                                android:layout_width="match_parent"
                                android:text=""
                                android:inputType="text"
                                android:importantForAutofill="no"
                                android:ellipsize="none"
                                android:maxLines="100"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="@dimen/_9sdp"
                                android:scrollHorizontally="false"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionDone" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/acc_no_acc_ledger_missing_msg"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please Select A/C No"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />

                <ScrollView
                    android:id="@+id/account_ledger_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ad_name_selected_view_al"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:textColor="@color/green_sea"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/ad_code_selected_view_al"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:textColor="@color/green_sea"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="@dimen/_9sdp"/>

