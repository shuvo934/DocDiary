                                android:scrollbars="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:background="@color/light_green">

                                        <TextView
                                            android:layout_width="60dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="8dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text="Date"
                                            android:fontFamily="@font/archivo_bold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/white"/>

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text="Voucher No"
                                            android:fontFamily="@font/archivo_bold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/white"/>

                                        <TextView
                                            android:layout_width="200dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text="Particulars"
                                            android:fontFamily="@font/archivo_bold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/white"/>

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text="Debit"
                                            android:fontFamily="@font/archivo_bold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/white"/>

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text="Credit"
                                            android:fontFamily="@font/archivo_bold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/white"/>

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text="Balance"
                                            android:fontFamily="@font/archivo_bold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@android:color/black"/>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_gravity="center"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/opening_date_acc_ledger"
                                            android:layout_width="60dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="8dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text="Date"
                                            android:fontFamily="@font/archivo_bold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/default_text_color"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold" />

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/black"/>

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text="Opening"
                                            android:fontFamily="@font/archivo_bold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold" />
                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/white"/>

                                        <TextView
                                            android:layout_width="200dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text=""
                                            android:fontFamily="@font/archivo_bold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold" />

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/black"/>

                                        <TextView
                                            android:id="@+id/opening_debit_balance"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text=""
                                            android:fontFamily="@font/archivo_bold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold" />

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/black"/>

                                        <TextView
                                            android:id="@+id/opening_credit_balance"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text=""
                                            android:fontFamily="@font/archivo_bold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold" />

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/black"/>
                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text=""
                                            android:fontFamily="@font/archivo_bold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@android:color/black"/>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/acc_ledger_report_view"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:scrollbars="vertical"
                                            android:descendantFocusability="beforeDescendants"
                                            android:focusable="true"
                                            android:focusableInTouchMode="true" />

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:background="@color/white">

                                        <TextView
                                            android:layout_width="171dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="8dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text="Turn Over This Period"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_10sdp"/>

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/white"/>

                                        <TextView
                                            android:layout_width="200dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:gravity="center"
                                            android:text=""
                                            android:fontFamily="@font/poppins_semibold"
                                            android:paddingTop="@dimen/_2sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/black"/>

