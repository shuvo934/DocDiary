<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hr_accounts.pay_invoice.PaymentInvoice">

    <LinearLayout
        android:id="@+id/payment_invoice_full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@color/light_green">

        <RelativeLayout
            android:id="@+id/app_bar_payment_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_green"
            android:padding="@dimen/_12sdp">

            <ImageView
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_19sdp"
                android:id="@+id/back_logo_of_payment_invoice"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:src="@drawable/arrow_back"
                app:tint="@color/white"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/back_logo_of_payment_invoice"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/pay_invoice_bar_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="3dp"
            android:background="@color/white"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:background="@drawable/border_design_2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Payment Code"
                            android:layout_gravity="center"
                            android:textColor="@color/default_text_color"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="@dimen/_8sdp"
                            tools:ignore="HardcodedText"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=":"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/default_text_color"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="@dimen/_8sdp"
                            tools:ignore="HardcodedText"/>

                        <TextView
                            android:id="@+id/payment_code_in_pay_inv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text=""
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:textColor="@color/green_sea"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="@dimen/_10sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Payment Date"
                            android:layout_gravity="center"
                            android:textColor="@color/back_color"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="@dimen/_8sdp"
                            tools:ignore="HardcodedText"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=":"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/back_color"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="@dimen/_8sdp"
                            tools:ignore="HardcodedText"/>

                        <TextView
                            android:id="@+id/payment_date_in_pay_inv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text=""
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:textColor="@color/default_text_color"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="@dimen/_9sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Patient Name"
                            android:layout_gravity="center"
                            android:textColor="@color/back_color"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="@dimen/_8sdp"
                            tools:ignore="HardcodedText"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=":"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/back_color"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="@dimen/_8sdp"
                            tools:ignore="HardcodedText"/>

                        <TextView
                            android:id="@+id/patient_name_in_pay_inv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text=""
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:textColor="@color/default_text_color"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="@dimen/_9sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:weightSum="10"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Patient Code :"
                                android:textColor="@color/back_color"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="@dimen/_8sdp"
                                tools:ignore="HardcodedText"/>

                            <TextView
                                android:id="@+id/patient_code_in_pay_inv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="start"
                                android:textColor="@color/default_text_color"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="@dimen/_9sdp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Prescription Code :"
                                android:textColor="@color/back_color"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="@dimen/_8sdp"
                                tools:ignore="HardcodedText"/>

                            <TextView
                                android:id="@+id/prescription_code_in_pay_inv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="start"
                                android:textColor="@color/default_text_color"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="@dimen/_9sdp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:weightSum="10"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Age :"
                                android:textColor="@color/back_color"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="@dimen/_8sdp"
                                tools:ignore="HardcodedText"/>

                            <TextView
                                android:id="@+id/patient_age_in_pay_inv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="start"
                                android:textColor="@color/default_text_color"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="@dimen/_9sdp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Gender :"
                                android:textColor="@color/back_color"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="@dimen/_8sdp"
                                tools:ignore="HardcodedText"/>

                            <TextView
                                android:id="@+id/patient_gender_in_pay_inv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="start"
                                android:textColor="@color/default_text_color"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="@dimen/_9sdp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:weightSum="10"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Marital Status :"
                                android:textColor="@color/back_color"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="@dimen/_8sdp"
                                tools:ignore="HardcodedText"/>

                            <TextView
                                android:id="@+id/patient_marital_status_in_pay_inv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="start"
                                android:textColor="@color/default_text_color"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="@dimen/_9sdp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Patient Category :"
                                android:textColor="@color/back_color"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="@dimen/_8sdp"
                                tools:ignore="HardcodedText"/>

                            <TextView
                                android:id="@+id/patient_category_in_pay_inv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="start"
                                android:textColor="@color/default_text_color"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="@dimen/_9sdp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:weightSum="10"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Address :"
                                android:textColor="@color/back_color"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="@dimen/_8sdp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/patient_address_in_pay_inv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="start"
                                android:textColor="@color/default_text_color"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="@dimen/_9sdp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Phone No :"
                                android:textColor="@color/back_color"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="@dimen/_8sdp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/patient_phone_no_in_pay_inv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="start"
                                android:textColor="@color/default_text_color"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="@dimen/_9sdp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_design_1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/payment_invoice_item_report_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:background="@drawable/border_design_2"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="Sub Total"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="@dimen/_9sdp"
                                    tools:ignore="HardcodedText"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=":"
                                    android:gravity="center"
                                    android:textColor="@color/default_text_color"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="@dimen/_8sdp"
                                    tools:ignore="HardcodedText"/>

                                <TextView
                                    android:id="@+id/sub_total_in_pay_inv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text=""
                                    android:gravity="end"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textSize="@dimen/_10sdp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/discount_layout_in_pay_inv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:background="@drawable/border_design_2"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="Discount (-)"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="@dimen/_9sdp"
                                    tools:ignore="HardcodedText"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=":"
                                    android:gravity="center"
                                    android:textColor="@color/default_text_color"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="@dimen/_8sdp"
                                    tools:ignore="HardcodedText"/>

                                <TextView
                                    android:id="@+id/discount_in_pay_inv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text=""
                                    android:gravity="end"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textSize="@dimen/_10sdp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/service_charge_layout_in_pay_inv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:background="@drawable/border_design_2"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="Service Charge"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="@dimen/_9sdp"
                                    tools:ignore="HardcodedText"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=":"
                                    android:gravity="center"
                                    android:textColor="@color/default_text_color"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="@dimen/_8sdp"
                                    tools:ignore="HardcodedText"/>

                                <TextView
                                    android:id="@+id/service_charge_in_pay_inv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text=""
                                    android:gravity="end"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textSize="@dimen/_10sdp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:background="@drawable/border_design_2"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="Grand Total"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="@dimen/_9sdp"
                                    tools:ignore="HardcodedText"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=":"
                                    android:gravity="center"
                                    android:textColor="@color/default_text_color"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="@dimen/_8sdp"
                                    tools:ignore="HardcodedText"/>

                                <TextView
                                    android:id="@+id/grand_total_in_pay_inv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text=""
                                    android:gravity="end"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textSize="@dimen/_10sdp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_indicator_payment_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:layout_gravity="center"/>

</RelativeLayout>