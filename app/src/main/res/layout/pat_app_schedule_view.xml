                    android:layout_weight=".5"
                    android:textSize="@dimen/_10sdp"
                    android:text=" : "
                    android:textColor="@color/light_green"
                    android:fontFamily="@font/poppins_semibold"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:id="@+id/pat_appointment_doc_name_from_calendar"
                        android:text="Junayed Ahmed"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/default_text_color"
                        android:id="@+id/pat_appointment_depts_name_from_calendar"
                        android:text="( Autism Communication Group )"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/default_text_color"
                        android:id="@+id/pat_appointment_deptd_name_from_calendar"
                        android:text="( Speech &amp; Language Therapy Department )"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

