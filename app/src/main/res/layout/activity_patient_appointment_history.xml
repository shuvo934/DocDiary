<!--                                    android:textColor="@color/white"-->
<!--                                    android:textSize="@dimen/_9sdp"-->
<!--                                    android:textStyle="bold"-->
<!--                                    tools:ignore="HardcodedText" />-->

<!--                            </LinearLayout>-->

<!--                        </androidx.cardview.widget.CardView>-->

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/search_filter_button"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignTop="@id/date_range_card"
                            android:layout_alignBottom="@id/date_range_card"
                            android:layout_alignParentEnd="true"
                            app:icon="@drawable/search_24"
                            app:iconSize="@dimen/_16sdp"
                            android:text="Filter"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:minHeight="0dp"
                            android:paddingVertical="8dp"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_gravity="end"
                            android:textSize="@dimen/_9sdp"
                            android:fontFamily="@font/poppins_bold"
                            app:cornerRadius="@dimen/_8sdp"
                            tools:ignore="HardcodedText" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/search_layout_pat_app_hist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="@dimen/_1sdp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/light_green">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/spinner_layout_service_search_for_pat_app_hist"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                    app:boxBackgroundColor="@color/white"
                                    app:boxBackgroundMode="filled"
                                    app:endIconMode="dropdown_menu"
                                    app:boxStrokeWidth="0dp"
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:hint="Search by Service"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                    tools:ignore="HardcodedText">

                                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                        android:id="@+id/service_search_for_pat_app_hist"
                                        style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                                        android:layout_width="match_parent"
                                        android:text=""
                                        android:inputType="text"
                                        android:importantForAutofill="no"
                                        android:ellipsize="none"
                                        android:maxLines="100"
                                        android:clickable="true"
                                        android:focusable="false"
                                        android:textSize="@dimen/_9sdp"
                                        android:textColor="@color/black"
                                        android:scrollHorizontally="false"
                                        android:layout_height="wrap_content"
                                        android:imeOptions="actionDone" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="@dimen/_1sdp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/light_green">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/spinner_layout_unit_search_for_pat_app_hist"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                    app:boxBackgroundColor="@color/white"
                                    app:boxBackgroundMode="filled"
                                    app:endIconMode="dropdown_menu"
                                    app:boxStrokeWidth="0dp"
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:hint="Search by Unit"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                    tools:ignore="HardcodedText">

                                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                        android:id="@+id/unit_search_for_pat_app_hist"
                                        style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                                        android:layout_width="match_parent"
                                        android:text=""
                                        android:inputType="text"
                                        android:importantForAutofill="no"
                                        android:ellipsize="none"
                                        android:maxLines="100"
                                        android:clickable="true"
                                        android:focusable="false"
                                        android:textSize="@dimen/_9sdp"
                                        android:textColor="@color/black"
                                        android:scrollHorizontally="false"
                                        android:layout_height="wrap_content"
                                        android:imeOptions="actionDone" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="@dimen/_1sdp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/light_green">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/spinner_layout_doc_search_for_pat_app_hist"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                    app:boxBackgroundColor="@color/white"
                                    app:boxBackgroundMode="filled"
                                    app:endIconMode="dropdown_menu"
                                    app:boxStrokeWidth="0dp"
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:hint="Search by Doctor/Therapist"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                    tools:ignore="HardcodedText">

                                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                        android:id="@+id/doc_search_for_pat_app_hist"
                                        style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                                        android:layout_width="match_parent"
                                        android:text=""
                                        android:inputType="text"
                                        android:importantForAutofill="no"
                                        android:ellipsize="none"
                                        android:maxLines="100"
                                        android:clickable="true"
                                        android:focusable="false"
                                        android:textSize="@dimen/_9sdp"
                                        android:textColor="@color/black"
                                        android:scrollHorizontally="false"
                                        android:layout_height="wrap_content"
                                        android:imeOptions="actionDone" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4sdp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/pat_appoint_history_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:descendantFocusability="beforeDescendants"
                            android:focusable="true"
                            android:focusableInTouchMode="true"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/no_information_found_msg_pat_app_hist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Appointment History Found"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_margin="@dimen/_8sdp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_indicator_pat_appoint_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:layout_gravity="center"/>

</RelativeLayout>