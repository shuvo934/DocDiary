<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pat_app_history_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".appt_schedule.pat_history.PatientAppointmentHistory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/pat_app_history_full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@color/light_green">

        <RelativeLayout
            android:id="@+id/app_bar_pat_app_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9"
            android:background="@color/light_green">

            <ImageView
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_19sdp"
                android:id="@+id/back_logo_of_pat_app_history"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:src="@drawable/arrow_back"
                app:tint="@color/white"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/back_logo_of_pat_app_history"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/pat_app_hist_bar_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.1"
            android:layout_marginTop="5dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="0dp"
                android:background="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pat_app_hist_patient_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_bold" />

                    <TextView
                        android:id="@+id/pat_app_hist_patient_ph_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/default_text_color"
                        android:fontFamily="@font/poppins"
                        android:layout_marginBottom="@dimen/_4sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/date_range_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="@dimen/_1sdp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/search_filter_button"
                            app:cardBackgroundColor="@color/light_green">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:boxBackgroundColor="@color/white"
                                app:boxBackgroundMode="filled"
                                app:boxStrokeWidth="0dp"
                                android:clickable="true"
                                android:focusable="false"
                                android:hint="Date Range"
                                app:startIconDrawable="@drawable/calendar_icon"
                                app:startIconTint="@color/green_sea"
                                tools:ignore="HardcodedText">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/date_range_pat_app_hist"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="@dimen/_9sdp"
                                    android:inputType="date"
                                    android:imeOptions="actionDone"
                                    android:textColor="@color/black"/>

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.cardview.widget.CardView>

<!--                        <androidx.cardview.widget.CardView-->
<!--                            android:id="@+id/search_filter_button"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="match_parent"-->
<!--                            app:cardCornerRadius="@dimen/_8sdp"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:layout_marginStart="@dimen/_2sdp"-->
<!--                            android:layout_alignTop="@id/date_range_card"-->
<!--                            android:layout_alignBottom="@id/date_range_card"-->
<!--                            android:layout_alignParentEnd="true"-->
<!--                            android:layout_marginEnd="@dimen/_4sdp"-->
<!--                            app:cardElevation="@dimen/_1sdp"-->
<!--                            android:foreground="?attr/selectableItemBackground"-->
<!--                            app:cardBackgroundColor="@color/light_green">-->

<!--                            <LinearLayout-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="match_parent"-->
<!--                                android:layout_gravity="center"-->
<!--                                android:gravity="center"-->
<!--                                android:orientation="horizontal"-->
<!--                                android:background="@drawable/border_design_2"-->
<!--                                tools:ignore="UseCompoundDrawables">-->

<!--                                <ImageView-->
<!--                                    android:layout_width="@dimen/_17sdp"-->
<!--                                    android:layout_height="@dimen/_17sdp"-->
<!--                                    android:layout_gravity="center"-->
<!--                                    android:src="@drawable/search_24"-->
<!--                                    android:layout_marginStart="@dimen/_4sdp"-->
<!--                                    app:tint="@color/white"-->
<!--                                    tools:ignore="ContentDescription" />-->
<!--                                <TextView-->
<!--                                    android:layout_width="wrap_content"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:layout_gravity="center"-->
<!--                                    android:fontFamily="@font/poppins_bold"-->
<!--                                    android:text="FILTER"-->
<!--                                    android:layout_marginEnd="@dimen/_4sdp"-->
