<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/medicine_name_for_patient"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/clouds"
        android:text="Medicine Name"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/default_text_color"
        android:padding="4dp"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:textSize="@dimen/_9sdp"/>

    <TextView
        android:id="@+id/medicine_take_time_for_patient"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/clouds"
        android:text="Time"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/default_text_color"
        android:padding="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:textSize="@dimen/_9sdp"/>

    <TextView
        android:id="@+id/medicine_dose_for_patient"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/clouds"
        android:text="Dose"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/default_text_color"
        android:padding="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:textSize="@dimen/_9sdp"/>

    <TextView
        android:id="@+id/medicine_take_duration_for_patient"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/clouds"
        android:text="Duration (Days)"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/default_text_color"
        android:padding="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:textSize="@dimen/_9sdp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/clouds"
        android:layout_marginStart="2dp"
        android:gravity="center"
        android:padding="4dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/patient_medication_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel_24"/>

    </LinearLayout>

</LinearLayout>