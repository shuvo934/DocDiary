<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9.2">

        <LinearLayout
            android:id="@+id/added_service_button_view_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:weightSum="9.2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginEnd="2dp"
                android:background="@color/clouds">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Service:  "
                        android:layout_weight="4"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"/>

                    <TextView
                        android:id="@+id/added_service_name"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content"
                        android:text="Physiotherapy Service Charge"
                        android:fontFamily="@font/open_sans_bold"
                        android:textColor="@color/default_text_color"
                        android:textSize="@dimen/_9sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Unit:  "
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"/>
                    <TextView
                        android:id="@+id/added_unit_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="Assessment"
                        android:fontFamily="@font/open_sans_bold"
                        android:textColor="@color/default_text_color"
                        android:textSize="@dimen/_9sdp"/>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/added_service_qty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:background="@color/clouds"
                android:text="qty"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/default_text_color"
                android:padding="4dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:gravity="center"
                android:textSize="@dimen/_9sdp"/>

            <TextView
                android:id="@+id/added_service_rate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:background="@color/clouds"
                android:text="rate"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/default_text_color"
                android:padding="4dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:gravity="center"
                android:textSize="@dimen/_9sdp"/>

            <TextView
                android:id="@+id/added_service_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:background="@color/clouds"
                android:text="amount"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/default_text_color"
                android:padding="4dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:gravity="center"
                android:textSize="@dimen/_9sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/added_service_button_view_lay"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/added_service_delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/clouds"
        android:layout_marginStart="2dp"
        android:gravity="center"
        android:padding="4dp"
        android:layout_weight=".8">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel_24"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>