<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.DocDashboard">

    <LinearLayout
        android:id="@+id/doc_dashboard_full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottom_navigation_layout"
        android:background="@color/clouds">

        <RelativeLayout
            android:id="@+id/app_bar_doc_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clouds"
            android:padding="16dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/doc_diary_logo"
                android:layout_centerVertical="true"
                android:src="@drawable/doc_diary_default"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:paddingTop="2dp"
                android:paddingBottom="0dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@id/doc_diary_logo"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/doc_dashboard_name"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/log_out_doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logout_24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:tint="@color/green_sea"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/month_view_selection_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="3dp"
            android:background="@color/white"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/greetings_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/green_sea"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_7sdp"/>

                    <TextView
                        android:id="@+id/doctor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_7sdp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="@color/progress_back_color">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progressView_horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:trackThickness="110dp"
                                android:layout_centerHorizontal="true"
                                app:trackColor="@color/progress_back_color"
                                app:indicatorColor="@color/light_green"
                                android:layout_alignParentBottom="true"
                                android:rotation="180"/>

<!--                            <com.moos.library.HorizontalProgressView-->
<!--                                android:id="@+id/progressView_horizontal"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="100dp"-->
<!--                                app:start_color="@color/light_green"-->
<!--                                app:end_color="@color/green_sea"-->
<!--                                app:track_width="100dp"-->
<!--                                app:corner_radius="0dp"-->
<!--                                app:progressTextVisibility="false"-->
<!--                                app:textMovedEnable="false"-->
<!--                                app:isTracked="true"-->
<!--                                app:animateType="LinearInterpolator"-->
<!--                                app:trackColor="@color/progress_back_color"-->
<!--                                android:rotation="180"/>-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:baselineAligned="false">

                                <LinearLayout
                                    android:id="@+id/next_meeting_details_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="5dp"
                                    android:weightSum="10"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/next_meeting_text_view"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="5"
                                        android:text="Next Meeting"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/poppins_bold"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_marginBottom="5dp"
                                        tools:ignore="HardcodedText" />

                                    <TextView
                                        android:id="@+id/next_meeting_time_dashboard"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="5"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:gravity="end"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:layout_marginBottom="5dp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="10"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_gravity="bottom|center">

                                    <TextView
                                        android:id="@+id/next_meeting_patient_name"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="5.5"
                                        android:text=""
                                        android:gravity="start"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/poppins_medium"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginStart="@dimen/_10sdp"/>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="4.5"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|end"
                                        android:layout_marginTop="5dp"
                                        android:gravity="end|center"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/timer_icon_image"
                                            android:layout_width="18dp"
                                            android:layout_height="18dp"
                                            android:src="@drawable/baseline_timer_24"
                                            android:layout_gravity="end|center"
                                            app:tint="@color/white"
                                            tools:ignore="ContentDescription" />

                                        <com.androchef.happytimer.countdowntimer.NormalCountDownView
                                            android:id="@+id/normalCountDownView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:normal_timer_text_size="13sp"
                                            app:normal_timer_label_text_size="10sp"
                                            app:normal_timer_text_color="@color/white"
                                            app:normal_timer_text_label_color="@color/white"
                                            app:normal_timer_text_isBold="true"
                                            app:normal_timer_text__label_isBold="false"
                                            app:show_labels="true"
                                            app:show_hour="true"
                                            app:show_minutes="true"
                                            app:show_seconds="true"
                                            android:layout_gravity="end|center"/>

<!--                                        <com.tsuryo.androidcountdown.Counter-->
<!--                                            android:id="@+id/time_counter"-->
<!--                                            android:layout_width="wrap_content"-->
<!--                                            android:layout_height="wrap_content"-->
<!--                                            android:layout_gravity="end"-->
<!--                                            app:text_size="13sp"-->
<!--                                            app:text_color="@color/white"-->
<!--                                            android:padding="@dimen/_5sdp"-->
<!--                                            android:gravity="bottom|end"-->
<!--                                            app:max_time_unit="DAY"-->
<!--                                            app:custom_font="@font/poppins"/>-->
                                    </LinearLayout>



                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/three_tab_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tabBackground="@drawable/tab_color_selector"
                            app:tabIndicator="@color/white"
                            app:tabMode="fixed"
                            android:layout_marginTop="7dp"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="3dp"
                            app:tabIndicatorColor="@color/white"
                            app:tabSelectedTextColor="@color/white"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            app:tabTextAppearance="@style/NavigationTabTextAppeareance">

                            <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/today_info_tab"
                                android:text="Today"/>
                            <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/current_week_info_tab"
                                android:text="Current Week"/>
                            <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/current_month_info_tab"
                                android:text="Current Month"/>
                            <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/next_month_info_tab"
                                android:text="Next Month"/>

                        </com.google.android.material.tabs.TabLayout>

<!--                        <FrameLayout-->
<!--                            android:id="@+id/frame_layout_for_tab"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="match_parent"-->
<!--                            android:layout_below="@+id/three_tab_layout"-->
<!--                            android:layout_marginTop = "8dp"-->
<!--                            android:layout_marginStart="3dp"-->
<!--                            android:layout_marginEnd="3dp"/>-->

                        <LinearLayout
                            android:id="@+id/tab_selected_full_layout"
                            android:layout_width="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:visibility="visible"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/three_tab_layout"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/date_range_tab_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/archivo_bold"
                                android:text=""
                                android:textColor="@color/default_text_color"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardElevation="3dp"
                                    android:layout_margin="5dp"
                                    app:cardCornerRadius="10dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/design_new"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="TOTAL SCHEDULE"
                                            android:fontFamily="@font/poppins_bold"
                                            android:textColor="@color/white"
                                            android:textStyle="bold"
                                            android:gravity="center"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:textSize="@dimen/_10sdp"
                                            tools:ignore="HardcodedText" />

                                        <TextView
                                            android:id="@+id/total_schedule_count"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/baloo"
                                            android:gravity="center|top"
                                            android:text=""
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_25sdp" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/disabled"
                                    app:cardElevation="3dp"
                                    android:layout_margin="5dp"
                                    app:cardCornerRadius="10dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/border_design_1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="BLOCKED SCHEDULE"
                                            android:fontFamily="@font/poppins_bold"
                                            android:textColor="@color/white"
                                            android:textStyle="bold"
                                            android:gravity="center"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:textSize="@dimen/_10sdp"
                                            tools:ignore="HardcodedText" />
                                        <TextView
                                            android:id="@+id/blocked_schedule_count"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text=""
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_25sdp"
                                            android:gravity="center|top"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/baloo"/>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Appointment"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/green_sea"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                tools:ignore="HardcodedText" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="12"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_weight="4"
                                    android:layout_height="100dp"
                                    app:cardBackgroundColor="#ffbe76"
                                    app:cardElevation="3dp"
                                    android:layout_margin="5dp"
                                    app:cardCornerRadius="10dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/background_png_dot"
                                            android:backgroundTint="@color/clouds"
                                            android:layout_centerVertical="true"
                                            android:layout_centerHorizontal="true"
                                            android:alpha=".5"
                                            tools:ignore="ContentDescription" />

                                        <TextView
                                            android:id="@+id/total_meeting_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="TOTAL"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentTop="true"
                                            android:textColor="@color/white"
                                            android:textStyle="bold"
                                            android:gravity="center"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:textSize="@dimen/_11sdp"
                                            tools:ignore="HardcodedText" />

                                        <TextView
                                            android:id="@+id/total_meeting_count"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/baloo"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentEnd="true"
                                            android:layout_below="@id/total_meeting_text"
                                            android:gravity="center|top"
                                            android:text=""
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_25sdp" />

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_weight="4"
                                    android:layout_height="100dp"
                                    app:cardBackgroundColor="@color/light_green"
                                    app:cardElevation="3dp"
                                    android:layout_margin="5dp"
                                    app:cardCornerRadius="10dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/background_png_dot"
                                            android:backgroundTint="@color/clouds"
                                            android:layout_centerVertical="true"
                                            android:layout_centerHorizontal="true"
                                            android:alpha=".5"
                                            tools:ignore="ContentDescription" />

                                        <TextView
                                            android:id="@+id/completed_meeting_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="COMPLETED"
                                            android:fontFamily="@font/poppins_bold"
                                            android:textColor="@color/white"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentTop="true"
                                            android:textStyle="bold"
                                            android:gravity="center"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:textSize="@dimen/_11sdp"
                                            tools:ignore="HardcodedText" />
                                        <TextView
                                            android:id="@+id/completed_meeting_count"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text=""
                                            android:textColor="@color/white"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentEnd="true"
                                            android:layout_below="@+id/completed_meeting_text"
                                            android:textSize="@dimen/_25sdp"
                                            android:gravity="center|top"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/baloo"/>

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_weight="4"
                                    android:layout_height="100dp"
                                    app:cardBackgroundColor="@color/back_color"
                                    app:cardElevation="3dp"
                                    android:layout_margin="5dp"
                                    app:cardCornerRadius="10dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/background_png_dot"
                                            android:backgroundTint="@color/clouds"
                                            android:layout_centerVertical="true"
                                            android:layout_centerHorizontal="true"
                                            android:alpha=".5"
                                            tools:ignore="ContentDescription" />

                                        <TextView
                                            android:id="@+id/remaining_meeting_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="REMAINING"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentTop="true"
                                            android:fontFamily="@font/poppins_bold"
                                            android:textColor="@color/white"
                                            android:textStyle="bold"
                                            android:gravity="center"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:textSize="@dimen/_11sdp"
                                            tools:ignore="HardcodedText" />
                                        <TextView
                                            android:id="@+id/remaining_meeting_count"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text=""
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentEnd="true"
                                            android:layout_below="@+id/remaining_meeting_text"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_25sdp"
                                            android:gravity="center|top"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/baloo"/>

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progress_indicator_doc_dashboard_tab_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_80sdp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:indeterminate="true"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/tab_refresh_button"
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_margin="@dimen/_80sdp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/refresh_24"
                            tools:ignore="ContentDescription" />

                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:backgroundTint="@color/light_green"
        android:background="@drawable/design2"
        app:itemTextAppearanceActive="@style/BottomNavigationViewTextStyle"
        app:itemTextAppearanceInactive="@style/BottomNavigationViewTextStyle"
        app:itemIconTint="@drawable/bottom_nav_icon_color_selector_2"
        app:itemTextColor="@drawable/bottom_nav_icon_color_selector"
        app:menu="@menu/bottom_menu" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_indicator_doc_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:layout_gravity="center"/>

</RelativeLayout>