<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/search_patient_selectable_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/light_green">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/spinner_layout_search_patient_for_add_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:boxCornerRadiusTopStart="@dimen/_8sdp"
            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:startIconDrawable="@drawable/search_24"
            app:startIconTint="@color/black"
            app:boxStrokeWidth="0dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="Select Patient"
            tools:ignore="HardcodedText"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/search_patient_for_add_appointment_spinner"
                style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                android:layout_width="match_parent"
                android:text=""
                android:inputType="text"
                android:importantForAutofill="no"
                android:ellipsize="none"
                android:clickable="true"
                android:focusable="false"
                android:fontFamily="@font/archivo_bold"
                android:textSize="@dimen/_11sdp"
                android:maxLines="100"
                android:textColor="@color/black"
                android:scrollHorizontally="false"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/select_pat_for_app_error_handling_msg"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Select Patient"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/light_green">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/spinner_layout_select_doctor_for_add_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:boxCornerRadiusTopStart="@dimen/_8sdp"
            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:endIconMode="custom"
            android:clickable="true"
            android:focusable="false"
            app:endIconDrawable="@drawable/arrow_drop_down_24"
            app:boxStrokeWidth="0dp"
            android:enabled="false"
            android:hint="Select Doctor"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            tools:ignore="HardcodedText">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/select_doctor_for_add_appointment_spinner"
                style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                android:layout_width="match_parent"
                android:text=""
                android:inputType="text"
                android:importantForAutofill="no"
                android:clickable="true"
                android:focusable="false"
                android:ellipsize="none"
                android:maxLines="100"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/archivo_bold"
                android:textColor="@color/black"
                android:scrollHorizontally="false"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/select_doctor_for_app_error_handling_msg"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Select Doctor"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/light_green">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/spinner_layout_select_unit_for_add_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:boxCornerRadiusTopStart="@dimen/_8sdp"
            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            android:enabled="false"
            android:hint="Unit"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            tools:ignore="HardcodedText">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/select_unit_for_add_appointment_spinner"
                style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                android:layout_width="match_parent"
                android:text=""
                android:inputType="text"
                android:importantForAutofill="no"
                android:ellipsize="none"
                android:maxLines="100"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/archivo_bold"
                android:textColor="@color/black"
                android:scrollHorizontally="false"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/light_green">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/spinner_layout_select_payment_for_add_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:boxCornerRadiusTopStart="@dimen/_8sdp"
            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/arrow_drop_down_24"
            android:clickable="true"
            android:focusable="false"
            app:boxStrokeWidth="0dp"
            android:enabled="false"
            android:hint="Select Payment Code"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            tools:ignore="HardcodedText">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/select_payment_for_add_appointment_spinner"
                style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                android:layout_width="match_parent"
                android:text=""
                android:inputType="text"
                android:importantForAutofill="no"
                android:ellipsize="none"
                android:maxLines="100"
                android:clickable="true"
                android:focusable="false"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/archivo_bold"
                android:textColor="@color/black"
                android:scrollHorizontally="false"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/select_payment_for_app_error_handling_msg"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Select Payment Code"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/service_qty_card_view_pat_app"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/light_green">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spinner_layout_select_service_for_add_appointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="filled"
                app:endIconMode="dropdown_menu"
                app:boxStrokeWidth="0dp"
                android:enabled="false"
                android:hint="Select Service"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                tools:ignore="HardcodedText">

<!--                <androidx.appcompat.widget.AppCompatAutoCompleteTextView-->
<!--                    android:id="@+id/select_service_for_add_appointment_spinner"-->
<!--                    style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:text=""-->
<!--                    android:inputType="text"-->
<!--                    android:importantForAutofill="no"-->
<!--                    android:ellipsize="none"-->
<!--                    android:maxLines="100"-->
<!--                    android:textSize="@dimen/_11sdp"-->
<!--                    android:fontFamily="@font/archivo_bold"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:scrollHorizontally="false"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:imeOptions="actionDone" />-->

                <com.rosemaryapp.amazingspinner.AmazingSpinner
                    android:id="@+id/select_service_for_add_appointment_spinner"
                    style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:text=""
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/archivo_bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/service_qty_card_view_pat_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/light_green">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/service_qty_from_payment_add_appointment_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="filled"
                app:boxStrokeWidth="0dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:enabled="false"
                android:hint="Qty"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                tools:ignore="HardcodedText">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/service_qty_from_payment_add_appointment"
                    style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:text=""
                    android:gravity="center"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:ellipsize="none"
                    android:maxLines="100"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/archivo_bold"
                    android:textColor="@color/black"
                    android:scrollHorizontally="false"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <TextView
        android:id="@+id/select_service_for_app_error_handling_msg"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Select Service"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

    <androidx.cardview.widget.CardView
        android:id="@+id/add_appointment_for_patient_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:visibility="visible"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="7dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@color/light_green"
                    android:text="Appointment Date"
                    android:fontFamily="@font/patua_one"
                    android:textColor="@color/white"
                    android:padding="4dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="center"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@color/light_green"
                    android:text="Appointment Time"
                    android:fontFamily="@font/patua_one"
                    android:textColor="@color/white"
                    android:padding="4dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="center"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/light_green"
                    android:text=""
                    android:textColor="@color/white"
                    android:padding="4dp"
                    android:layout_marginStart="2dp"
                    android:gravity="center"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/appointment_date_time_recyclerview_for_patient_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_schedule_for_add_appointment_patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="2dp"
                android:text="ADD SCHEDULE"
                app:cornerRadius="@dimen/_10sdp"
                android:textStyle="bold"
                android:fontFamily="@font/patua_one"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>